<h1>
  <span>MSampson</span>
  <span>Projects</span>
  <span>Experience</span>
</h1>
<hr>

<% @experience.each do |experience| %>
  <div class='experience-info'>
    <div class='experience-title noticia'>
     <%= experience.position %> @ <%= experience.title %>
    </div>
    <div class='experience-sidetitle noticia'>
      <%= experience.start_date %> to <%= experience.end_date %> | Mountain View, CA
    </div>
    <div class='clear'></div>
    <br />
    <div class='experience-content'>
      <%= experience.content %>
    </div>
  </div>
<% end %>

<h1>Projects</h1>
<hr>

<div class="row">
  <% @projects.each do |project| %>
    <div class="col-md-6">
      <div class="project-card <%= project.css_class %>">
        <div class="tag-header closed">
          <i class="devicon-postgresql-plain-wordmark"></i>
          <i class="devicon-ruby-plain-wordmark"></i>
          <i class="devicon-rails-plain-wordmark"></i>
          <i class="devicon-html5-plain-wordmark"></i>
          <i class="devicon-jquery-plain-wordmark"></i>
        </div>
        <div class="project-title">
          <%= link_to project.title, project.link_address %>

        </div>
        <div class="project-footer">
          <a href="#">
            <i class="devicon-github-plain-wordmark"></i>
          </a>
        </div>
      </div>
    </div>
  <% end %>
</div>

